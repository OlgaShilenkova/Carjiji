        <form>
          <input type="text" name="user_email" style="width: 200px; margin: 1em">
          <button type="submit" class="btn btn-primary">Update email</button>
      </form>
      </div>
      <div>
        Phone: <%= user.phone %><br>
        <form>
          <input type="text" name="user_phone" style="width: 200px; margin: 1em">
          <button type="submit" class="btn btn-primary">Update phone</button>
      </form>
      </div>
      <% } %>

  </section>
